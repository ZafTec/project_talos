---
import Layout from '@/layouts/Layout.astro';
import WaitlistModal from '@/components/WaitlistModal.astro';
import AuthModal from '@/components/AuthModal.astro';
import HeroVisual from '@/components/HeroVisual.astro';
---

<Layout title="Project Talos — Fortified Execution. Absolute Control." description="Enterprise-grade authentication and secure remote code execution platform. Built for developers who demand absolute security.">
  <style>
    /* Subtle floating animation */
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    @keyframes float-delayed {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-8px); }
    }
    
    @keyframes pulse-glow {
      0%, 100% { opacity: 0.4; }
      50% { opacity: 0.7; }
    }
    
    @keyframes gradient-shift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    
    @keyframes slide-up {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .animate-float { animation: float 6s ease-in-out infinite; }
    .animate-float-delayed { animation: float-delayed 5s ease-in-out infinite 1s; }
    .animate-pulse-glow { animation: pulse-glow 4s ease-in-out infinite; }
    .animate-gradient { background-size: 200% 200%; animation: gradient-shift 8s ease infinite; }
    
    .reveal {
      opacity: 0;
      transform: translateY(20px);
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .reveal.active {
      opacity: 1;
      transform: translateY(0);
    }
    
    /* Card hover effects */
    .feature-card {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .feature-card:hover {
      transform: translateY(-4px);
    }
    
    /* Gradient text */
    .gradient-text {
      background: linear-gradient(135deg, #4a7c59 0%, #8b9a46 50%, #c9a227 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    /* Shield pulse */
    @keyframes shield-pulse {
      0%, 100% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.05); opacity: 0.8; }
    }
    
    .shield-pulse {
      animation: shield-pulse 3s ease-in-out infinite;
    }
    
    /* Code block styling */
    .code-block {
      background: linear-gradient(145deg, #1a1a1a 0%, #2d2d2d 100%);
      border: 1px solid rgba(74, 124, 89, 0.2);
    }
    
    /* Pricing card highlight */
    .pricing-popular {
      position: relative;
    }
    
    .pricing-popular::before {
      content: '';
      position: absolute;
      inset: -2px;
      background: linear-gradient(135deg, #4a7c59, #8b9a46, #c9a227);
      border-radius: inherit;
      z-index: -1;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .pricing-popular:hover::before {
      opacity: 1;
    }
  </style>

  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-40 bg-cornsilk-50/90 backdrop-blur-xl border-b border-black-forest-100/50 transition-all duration-300" id="navbar">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <div class="flex items-center">
          <a href="/" class="flex items-center gap-3 group">
            <div class="relative h-10 w-10">
              <div class="absolute inset-0 bg-olive-leaf-600 rounded-xl shield-pulse"></div>
              <div class="absolute inset-0 flex items-center justify-center">
                <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                </svg>
              </div>
            </div>
            <div class="flex flex-col">
              <span class="text-xl font-bold text-black-forest-900 tracking-tight">Talos</span>
              <span class="text-[10px] text-olive-leaf-600 font-medium tracking-widest uppercase">Security Platform</span>
            </div>
          </a>
        </div>

        <div class="hidden md:flex items-center gap-8">
          <a href="#features" class="text-sm font-medium text-black-forest-600 hover:text-olive-leaf-600 transition-colors relative group">
            Features
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-olive-leaf-600 transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="#auth" class="text-sm font-medium text-black-forest-600 hover:text-olive-leaf-600 transition-colors relative group">
            Authentication
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-olive-leaf-600 transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="#execution" class="text-sm font-medium text-black-forest-600 hover:text-olive-leaf-600 transition-colors relative group">
            Execution
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-olive-leaf-600 transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="#pricing" class="text-sm font-medium text-black-forest-600 hover:text-olive-leaf-600 transition-colors relative group">
            Pricing
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-olive-leaf-600 transition-all duration-300 group-hover:w-full"></span>
          </a>
        </div>

        <div class="flex items-center gap-4">
          <button 
            onclick="openAuthModal()"
            class="hidden sm:block text-sm font-medium text-black-forest-600 hover:text-olive-leaf-600 transition-colors"
          >
            Sign In
          </button>
          <button 
            onclick="openWaitlistModal()"
            class="rounded-lg bg-olive-leaf-600 px-5 py-2.5 text-sm font-semibold text-white shadow-lg shadow-olive-leaf-600/20 hover:bg-olive-leaf-500 hover:shadow-xl hover:shadow-olive-leaf-600/30 transition-all duration-300 hover:-translate-y-0.5"
          >
            Get Started
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Animated background -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-cornsilk-50 via-olive-leaf-50/30 to-sunlit-clay-50/20 animate-gradient"></div>
      <div class="absolute top-20 right-20 w-72 h-72 bg-olive-leaf-300/20 rounded-full blur-3xl animate-pulse-glow"></div>
      <div class="absolute bottom-20 left-20 w-96 h-96 bg-sunlit-clay-300/20 rounded-full blur-3xl animate-pulse-glow"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-olive-leaf-200/10 rounded-full blur-3xl"></div>
    </div>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 pt-20">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Left content -->
        <div class="text-center lg:text-left reveal">
          <div class="inline-flex items-center gap-2 rounded-full bg-olive-leaf-100/80 backdrop-blur-sm px-4 py-2 mb-8 border border-olive-leaf-200/50">
            <span class="flex h-2 w-2 rounded-full bg-olive-leaf-600 animate-pulse"></span>
            <span class="text-sm font-medium text-olive-leaf-800">Now in Beta — v1.0 Coming Soon</span>
          </div>

          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight text-black-forest-900 mb-6">
            <span class="block">Fortified</span>
            <span class="block gradient-text">Execution.</span>
            <span class="block text-black-forest-700">Absolute Control.</span>
          </h1>

          <p class="text-lg sm:text-xl leading-relaxed text-black-forest-600 mb-8 max-w-xl mx-auto lg:mx-0">
            Enterprise-grade authentication meets secure remote code execution. The platform that guards your applications like the mythical bronze automaton guarded Crete.
          </p>

          <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
            <button 
              onclick="openWaitlistModal()"
              class="w-full sm:w-auto rounded-xl bg-olive-leaf-600 px-8 py-4 text-base font-semibold text-white shadow-xl shadow-olive-leaf-600/25 hover:bg-olive-leaf-500 hover:shadow-2xl hover:shadow-olive-leaf-600/30 transition-all duration-300 hover:-translate-y-1"
            >
              Start Building Free
            </button>
            <a 
              href="#auth"
              class="w-full sm:w-auto rounded-xl bg-white/80 backdrop-blur-sm px-8 py-4 text-base font-semibold text-black-forest-700 shadow-lg ring-1 ring-black-forest-200 hover:bg-white hover:shadow-xl transition-all duration-300"
            >
              Explore Auth Library
            </a>
          </div>

          <div class="mt-10 flex items-center justify-center lg:justify-start gap-6 text-sm text-black-forest-500">
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Free tier available</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>No credit card required</span>
            </div>
          </div>
        </div>

        <!-- Right content - Visual -->
        <HeroVisual />
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white border-y border-black-forest-100">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center reveal">
          <div class="text-4xl font-bold text-olive-leaf-600 mb-2">15min</div>
          <div class="text-sm text-black-forest-600">Token Lifetime</div>
        </div>
        <div class="text-center reveal">
          <div class="text-4xl font-bold text-olive-leaf-600 mb-2">RS256</div>
          <div class="text-sm text-black-forest-600">Asymmetric Signing</div>
        </div>
        <div class="text-center reveal">
          <div class="text-4xl font-bold text-olive-leaf-600 mb-2">10s</div>
          <div class="text-sm text-black-forest-600">Execution Timeout</div>
        </div>
        <div class="text-center reveal">
          <div class="text-4xl font-bold text-olive-leaf-600 mb-2">99.9%</div>
          <div class="text-sm text-black-forest-600">Uptime SLA</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Authentication Library Section -->
  <section id="auth" class="py-24 bg-cornsilk-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto mb-16 reveal">
        <div class="inline-flex items-center gap-2 rounded-full bg-olive-leaf-100 px-4 py-2 mb-6">
          <svg class="h-4 w-4 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
          <span class="text-sm font-medium text-olive-leaf-800">The Citadel</span>
        </div>
        <h2 class="text-4xl sm:text-5xl font-bold tracking-tight text-black-forest-900 mb-6">
          Authentication
          <span class="gradient-text">Reimagined</span>
        </h2>
        <p class="text-lg text-black-forest-600">
          A comprehensive authentication engine implementing JWT, OAuth 2.0, TOTP, and SSO from scratch. Built for security engineers who demand absolute control.
        </p>
      </div>

      <!-- Auth Features Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        <!-- JWT -->
        <div class="feature-card bg-white rounded-2xl p-8 shadow-sm border border-black-forest-100 reveal">
          <div class="h-14 w-14 rounded-2xl bg-olive-leaf-100 flex items-center justify-center mb-6">
            <svg class="h-7 w-7 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25l1.5-1.5L3 18.75V16.5l2.25-2.25 1.5-1.5 1.5-1.5c.404-.404.527-1 .43-1.563A6 6 0 016.75 3.75m9 9.75h.008v.008h-.008V13.5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-black-forest-900 mb-3">JWT Implementation</h3>
          <p class="text-black-forest-600 mb-4">RS256 asymmetric signing with 2048-bit RSA keys. Short-lived access tokens (15 min) with secure refresh token rotation.</p>
          <ul class="space-y-2 text-sm text-black-forest-500">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Key rotation via KID header
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Token blacklisting with Redis
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Family tracking for breach detection
            </li>
          </ul>
        </div>

        <!-- OAuth 2.0 -->
        <div class="feature-card bg-white rounded-2xl p-8 shadow-sm border border-black-forest-100 reveal">
          <div class="h-14 w-14 rounded-2xl bg-sunlit-clay-100 flex items-center justify-center mb-6">
            <svg class="h-7 w-7 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 14.25v2.25m3-4.5v4.5m3-6.75v6.75m3-9v9M6 20.25h12A2.25 2.25 0 0020.25 18V6A2.25 2.25 0 0018 3.75H6A2.25 2.25 0 003.75 6v12A2.25 2.25 0 006 20.25z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-black-forest-900 mb-3">OAuth 2.0 Provider</h3>
          <p class="text-black-forest-600 mb-4">Full authorization server implementation. Support for Authorization Code, PKCE, and Client Credentials grants.</p>
          <ul class="space-y-2 text-sm text-black-forest-500">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              RFC 6749/6750 compliant
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Token introspection (RFC 7662)
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              User consent screens
            </li>
          </ul>
        </div>

        <!-- TOTP -->
        <div class="feature-card bg-white rounded-2xl p-8 shadow-sm border border-black-forest-100 reveal">
          <div class="h-14 w-14 rounded-2xl bg-copperwood-100 flex items-center justify-center mb-6">
            <svg class="h-7 w-7 text-copperwood-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-black-forest-900 mb-3">TOTP / MFA</h3>
          <p class="text-black-forest-600 mb-4">RFC 6238 compliant time-based one-time passwords. Compatible with Google Authenticator, Authy, and 1Password.</p>
          <ul class="space-y-2 text-sm text-black-forest-500">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-copperwood-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              160-bit encrypted secrets
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-copperwood-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              10 backup recovery codes
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-copperwood-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              ±1 time step window
            </li>
          </ul>
        </div>

        <!-- Social Login -->
        <div class="feature-card bg-white rounded-2xl p-8 shadow-sm border border-black-forest-100 reveal">
          <div class="h-14 w-14 rounded-2xl bg-olive-leaf-100 flex items-center justify-center mb-6">
            <svg class="h-7 w-7 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-black-forest-900 mb-3">Social Login</h3>
          <p class="text-black-forest-600 mb-4">OAuth 2.0 client implementation for GitHub and Google. PKCE-enabled authorization code flow with state validation.</p>
          <ul class="space-y-2 text-sm text-black-forest-500">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Account linking support
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Profile synchronization
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              CSRF protection
            </li>
          </ul>
        </div>

        <!-- Session Management -->
        <div class="feature-card bg-white rounded-2xl p-8 shadow-sm border border-black-forest-100 reveal">
          <div class="h-14 w-14 rounded-2xl bg-sunlit-clay-100 flex items-center justify-center mb-6">
            <svg class="h-7 w-7 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-black-forest-900 mb-3">Session Control</h3>
          <p class="text-black-forest-600 mb-4">Complete visibility and control over user sessions. Device fingerprinting and secure token storage.</p>
          <ul class="space-y-2 text-sm text-black-forest-500">
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              View all active sessions
            </li>
            <li class="flex items-center gap-2">
              <svg class="h-4 w-4 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
              </svg>
              Revoke individual sessions
            </li>
