---
import Layout from '@/layouts/Layout.astro';
import WaitlistModal from '@/components/WaitlistModal.astro';
import AuthModal from '@/components/AuthModal.astro';
---

<Layout title="Welcome to Our Platform - Join the Future" description="Join our exclusive platform and be part of something special. Sign up for early access today.">
  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-40 bg-cornsilk-50/80 backdrop-blur-md border-b border-black-forest-100">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <div class="flex items-center">
          <a href="/" class="flex items-center gap-2">
            <div class="h-8 w-8 rounded-lg bg-olive-leaf-600 flex items-center justify-center">
              <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
              </svg>
            </div>
            <span class="text-xl font-bold text-black-forest-900">Brand</span>
          </a>
        </div>

        <div class="hidden md:flex items-center gap-8">
          <a href="#features" class="text-sm font-medium text-black-forest-600 hover:text-black-forest-900 transition-colors">Features</a>
          <a href="#about" class="text-sm font-medium text-black-forest-600 hover:text-black-forest-900 transition-colors">About</a>
          <a href="#pricing" class="text-sm font-medium text-black-forest-600 hover:text-black-forest-900 transition-colors">Pricing</a>
        </div>

        <div class="flex items-center gap-4">
          <button 
            onclick="openAuthModal()"
            class="text-sm font-medium text-black-forest-600 hover:text-black-forest-900 transition-colors"
          >
            Sign In
          </button>
          <button 
            onclick="openWaitlistModal()"
            class="rounded-lg bg-olive-leaf-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-olive-leaf-500 transition-colors"
          >
            Join Waitlist
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 lg:pt-40 lg:pb-32 overflow-hidden">
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-olive-leaf-100/50 via-cornsilk-50 to-sunlit-clay-100/30"></div>
      <div class="absolute top-0 right-0 -translate-y-1/4 translate-x-1/4 w-96 h-96 bg-olive-leaf-200/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 translate-y-1/4 -translate-x-1/4 w-96 h-96 bg-sunlit-clay-200/30 rounded-full blur-3xl"></div>
    </div>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <div class="inline-flex items-center gap-2 rounded-full bg-olive-leaf-100 px-4 py-1.5 mb-8">
          <span class="flex h-2 w-2 rounded-full bg-olive-leaf-600 animate-pulse"></span>
          <span class="text-sm font-medium text-olive-leaf-800">Now in early access</span>
        </div>

        <h1 class="text-4xl font-bold tracking-tight text-black-forest-900 sm:text-6xl mb-6">
          Build something
          <span class="text-olive-leaf-600">amazing</span>
          today
        </h1>

        <p class="text-lg leading-8 text-black-forest-600 mb-10">
          Join thousands of creators and builders who are already using our platform to bring their ideas to life. Get early access and exclusive benefits.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <button 
            onclick="openWaitlistModal()"
            class="w-full sm:w-auto rounded-xl bg-olive-leaf-600 px-8 py-4 text-base font-semibold text-white shadow-lg shadow-olive-leaf-600/25 hover:bg-olive-leaf-500 hover:shadow-xl hover:shadow-olive-leaf-600/30 transition-all"
          >
            Join the Waitlist
          </button>
          <a 
            href="#features"
            class="w-full sm:w-auto rounded-xl bg-white px-8 py-4 text-base font-semibold text-black-forest-700 shadow-sm ring-1 ring-black-forest-200 hover:bg-cornsilk-100 transition-all"
          >
            Learn More
          </a>
        </div>

        <div class="mt-10 flex items-center justify-center gap-8 text-sm text-black-forest-500">
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Free during beta</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="h-5 w-5 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>No credit card required</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl mx-auto mb-16">
        <h2 class="text-3xl font-bold tracking-tight text-black-forest-900 sm:text-4xl mb-4">
          Everything you need to succeed
        </h2>
        <p class="text-lg text-black-forest-600">
          Powerful features designed to help you build, launch, and grow your projects faster than ever before.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="relative rounded-2xl bg-cornsilk-50 p-8 hover:shadow-lg transition-shadow">
          <div class="h-12 w-12 rounded-xl bg-olive-leaf-100 flex items-center justify-center mb-6">
            <svg class="h-6 w-6 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-black-forest-900 mb-3">Lightning Fast</h3>
          <p class="text-black-forest-600">Built for speed with optimized performance and instant load times.</p>
        </div>

        <!-- Feature 2 -->
        <div class="relative rounded-2xl bg-cornsilk-50 p-8 hover:shadow-lg transition-shadow">
          <div class="h-12 w-12 rounded-xl bg-sunlit-clay-100 flex items-center justify-center mb-6">
            <svg class="h-6 w-6 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-black-forest-900 mb-3">Secure by Default</h3>
          <p class="text-black-forest-600">Enterprise-grade security with end-to-end encryption built in.</p>
        </div>

        <!-- Feature 3 -->
        <div class="relative rounded-2xl bg-cornsilk-50 p-8 hover:shadow-lg transition-shadow">
          <div class="h-12 w-12 rounded-xl bg-copperwood-100 flex items-center justify-center mb-6">
            <svg class="h-6 w-6 text-copperwood-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-black-forest-900 mb-3">Team Collaboration</h3>
          <p class="text-black-forest-600">Work seamlessly with your team in real-time, anywhere in the world.</p>
        </div>

        <!-- Feature 4 -->
        <div class="relative rounded-2xl bg-cornsilk-50 p-8 hover:shadow-lg transition-shadow">
          <div class="h-12 w-12 rounded-xl bg-olive-leaf-100 flex items-center justify-center mb-6">
            <svg class="h-6 w-6 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-black-forest-900 mb-3">Analytics Dashboard</h3>
          <p class="text-black-forest-600">Track your progress with detailed insights and beautiful visualizations.</p>
        </div>

        <!-- Feature 5 -->
        <div class="relative rounded-2xl bg-cornsilk-50 p-8 hover:shadow-lg transition-shadow">
          <div class="h-12 w-12 rounded-xl bg-sunlit-clay-100 flex items-center justify-center mb-6">
            <svg class="h-6 w-6 text-sunlit-clay-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-black-forest-900 mb-3">Customizable</h3>
          <p class="text-black-forest-600">Tailor everything to your needs with flexible configuration options.</p>
        </div>

        <!-- Feature 6 -->
        <div class="relative rounded-2xl bg-cornsilk-50 p-8 hover:shadow-lg transition-shadow">
          <div class="h-12 w-12 rounded-xl bg-copperwood-100 flex items-center justify-center mb-6">
            <svg class="h-6 w-6 text-copperwood-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-black-forest-900 mb-3">24/7 Support</h3>
          <p class="text-black-forest-600">Our dedicated team is always here to help you succeed, day or night.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-olive-leaf-600">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl mb-4">
          Ready to get started?
        </h2>
        <p class="text-lg text-olive-leaf-100 mb-8">
          Join our waitlist today and be among the first to experience the future.
        </p>
        <button 
          onclick="openWaitlistModal()"
          class="rounded-xl bg-white px-8 py-4 text-base font-semibold text-olive-leaf-700 shadow-lg hover:bg-cornsilk-50 transition-colors"
        >
          Join the Waitlist
        </button>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-black-forest-900 py-12">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
        <div class="col-span-1 md:col-span-2">
          <div class="flex items-center gap-2 mb-4">
            <div class="h-8 w-8 rounded-lg bg-olive-leaf-600 flex items-center justify-center">
              <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
              </svg>
            </div>
            <span class="text-xl font-bold text-white">Brand</span>
          </div>
          <p class="text-black-forest-400 text-sm max-w-xs">
            Building the future of digital experiences. Join us on our journey.
          </p>
        </div>

        <div>
          <h4 class="text-sm font-semibold text-white mb-4">Product</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-sm text-black-forest-400 hover:text-white transition-colors">Features</a></li>
            <li><a href="#" class="text-sm text-black-forest-400 hover:text-white transition-colors">Pricing</a></li>
            <li><a href="#" class="text-sm text-black-forest-400 hover:text-white transition-colors">Documentation</a></li>
          </ul>
        </div>

        <div>
          <h4 class="text-sm font-semibold text-white mb-4">Company</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-sm text-black-forest-400 hover:text-white transition-colors">About</a></li>
            <li><a href="#" class="text-sm text-black-forest-400 hover:text-white transition-colors">Blog</a></li>
            <li><a href="#" class="text-sm text-black-forest-400 hover:text-white transition-colors">Contact</a></li>
          </ul>
        </div>
      </div>

      <div class="border-t border-black-forest-800 pt-8 flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-sm text-black-forest-400">
          Â© 2026 Brand. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          <a href="#" class="text-sm text-black-forest-400 hover:text-white transition-colors">Privacy</a>
          <a href="#" class="text-sm text-black-forest-400 hover:text-white transition-colors">Terms</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Modals -->
  <WaitlistModal />
  <AuthModal />
</Layout>
