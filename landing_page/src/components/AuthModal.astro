---

<div id="auth-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="auth-modal-title" role="dialog" aria-modal="true">
  <!-- Backdrop -->
  <div class="fixed inset-0 bg-black-forest-900/60 backdrop-blur-sm transition-opacity opacity-0" id="auth-backdrop"></div>
  
  <!-- Modal panel -->
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
      <div 
        id="auth-panel"
        class="relative transform overflow-hidden rounded-2xl bg-cornsilk-50 text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-md opacity-0 scale-95"
      >
        <!-- Close button -->
        <button 
          type="button" 
          id="close-auth-modal"
          class="absolute right-4 top-4 text-black-forest-400 hover:text-black-forest-600 transition-colors z-10"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <div class="px-6 py-8 sm:px-8">
          <!-- Tabs -->
          <div class="flex space-x-1 rounded-xl bg-cornsilk-200 p-1 mb-6">
            <button
              type="button"
              id="tab-login"
              class="w-full rounded-lg py-2.5 text-sm font-medium leading-5 text-olive-leaf-700 bg-cornsilk-50 shadow transition-all"
              onclick="switchTab('login')"
            >
              Sign In
            </button>
            <button
              type="button"
              id="tab-signup"
              class="w-full rounded-lg py-2.5 text-sm font-medium leading-5 text-black-forest-600 hover:text-black-forest-800 transition-all"
              onclick="switchTab('signup')"
            >
              Sign Up
            </button>
          </div>

          <!-- Login Form -->
          <div id="login-form-container">
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-black-forest-900" id="auth-modal-title">
                Welcome back
              </h3>
              <p class="text-sm text-black-forest-600 mt-1">
                Sign in to your account to continue
              </p>
            </div>

            <form id="login-form" class="space-y-4">
              <div>
                <label for="login-email" class="block text-sm font-medium text-black-forest-700 mb-1">Email</label>
                <input
                  type="email"
                  id="login-email"
                  name="email"
                  required
                  class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 placeholder:text-black-forest-400 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                  placeholder="you@example.com"
                />
              </div>

              <div>
                <label for="login-password" class="block text-sm font-medium text-black-forest-700 mb-1">Password</label>
                <input
                  type="password"
                  id="login-password"
                  name="password"
                  required
                  class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 placeholder:text-black-forest-400 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                  placeholder="••••••••"
                />
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <input
                    id="remember-me"
                    name="remember-me"
                    type="checkbox"
                    class="h-4 w-4 rounded border-black-forest-300 text-olive-leaf-600 focus:ring-olive-leaf-500"
                  />
                  <label for="remember-me" class="ml-2 block text-sm text-black-forest-600">
                    Remember me
                  </label>
                </div>
                <div class="text-sm">
                  <a href="#" class="font-medium text-olive-leaf-600 hover:text-olive-leaf-500">
                    Forgot password?
                  </a>
                </div>
              </div>

              <button
                type="submit"
                class="w-full rounded-lg bg-olive-leaf-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-olive-leaf-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-olive-leaf-600 transition-colors"
              >
                Sign In
              </button>
            </form>
          </div>

          <!-- Signup Form -->
          <div id="signup-form-container" class="hidden">
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-black-forest-900">
                Create account
              </h3>
              <p class="text-sm text-black-forest-600 mt-1">
                Join us today and get started
              </p>
            </div>

            <form id="signup-form" class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label for="signup-firstname" class="block text-sm font-medium text-black-forest-700 mb-1">First name</label>
                  <input
                    type="text"
                    id="signup-firstname"
                    name="firstname"
                    required
                    class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 placeholder:text-black-forest-400 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                    placeholder="John"
                  />
                </div>
                <div>
                  <label for="signup-lastname" class="block text-sm font-medium text-black-forest-700 mb-1">Last name</label>
                  <input
                    type="text"
                    id="signup-lastname"
                    name="lastname"
                    required
                    class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 placeholder:text-black-forest-400 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                    placeholder="Doe"
                  />
                </div>
              </div>

              <div>
                <label for="signup-email" class="block text-sm font-medium text-black-forest-700 mb-1">Email</label>
                <input
                  type="email"
                  id="signup-email"
                  name="email"
                  required
                  class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 placeholder:text-black-forest-400 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                  placeholder="you@example.com"
                />
              </div>

              <div>
                <label for="signup-password" class="block text-sm font-medium text-black-forest-700 mb-1">Password</label>
                <input
                  type="password"
                  id="signup-password"
                  name="password"
                  required
                  class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 placeholder:text-black-forest-400 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                  placeholder="••••••••"
                />
              </div>

              <div>
                <label for="signup-confirm" class="block text-sm font-medium text-black-forest-700 mb-1">Confirm password</label>
                <input
                  type="password"
                  id="signup-confirm"
                  name="confirm"
                  required
                  class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 placeholder:text-black-forest-400 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                  placeholder="••••••••"
                />
              </div>

              <div class="flex items-start">
                <div class="flex h-5 items-center">
                  <input
                    id="terms"
                    name="terms"
                    type="checkbox"
                    required
                    class="h-4 w-4 rounded border-black-forest-300 text-olive-leaf-600 focus:ring-olive-leaf-500"
                  />
                </div>
                <div class="ml-3 text-sm">
                  <label for="terms" class="text-black-forest-600">
                    I agree to the <a href="#" class="text-olive-leaf-600 hover:text-olive-leaf-500">Terms</a> and <a href="#" class="text-olive-leaf-600 hover:text-olive-leaf-500">Privacy Policy</a>
                  </label>
                </div>
              </div>

              <button
                type="submit"
                class="w-full rounded-lg bg-olive-leaf-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-olive-leaf-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-olive-leaf-600 transition-colors"
              >
                Create Account
              </button>
            </form>
          </div>

          <div class="mt-6">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-black-forest-200"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="bg-cornsilk-50 px-2 text-black-forest-500">Or continue with</span>
              </div>
            </div>

            <div class="mt-6 grid grid-cols-2 gap-3">
              <button
                type="button"
                class="flex w-full items-center justify-center gap-2 rounded-lg bg-white px-3 py-2.5 text-sm font-semibold text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 hover:bg-cornsilk-100 transition-colors"
              >
                <svg class="h-5 w-5" viewBox="0 0 24 24">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                </svg>
                Google
              </button>

              <button
                type="button"
                class="flex w-full items-center justify-center gap-2 rounded-lg bg-white px-3 py-2.5 text-sm font-semibold text-black-forest-900 shadow-sm ring-1 ring-inset ring-black-forest-200 hover:bg-cornsilk-100 transition-colors"
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                </svg>
                GitHub
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const authModal = document.getElementById('auth-modal');
  const authBackdrop = document.getElementById('auth-backdrop');
  const authPanel = document.getElementById('auth-panel');
  const closeAuthBtn = document.getElementById('close-auth-modal');
  const loginContainer = document.getElementById('login-form-container');
  const signupContainer = document.getElementById('signup-form-container');
  const tabLogin = document.getElementById('tab-login');
  const tabSignup = document.getElementById('tab-signup');

  function openAuthModal() {
    authModal.classList.remove('hidden');
    void authModal.offsetWidth;
    authBackdrop.classList.remove('opacity-0');
    authPanel.classList.remove('opacity-0', 'scale-95');
    authPanel.classList.add('opacity-100', 'scale-100');
  }

  function closeAuthModal() {
    authBackdrop.classList.add('opacity-0');
    authPanel.classList.remove('opacity-100', 'scale-100');
    authPanel.classList.add('opacity-0', 'scale-95');
    setTimeout(() => {
      authModal.classList.add('hidden');
    }, 200);
  }

  function switchTab(tab) {
    if (tab === 'login') {
      loginContainer.classList.remove('hidden');
      signupContainer.classList.add('hidden');
      tabLogin.classList.add('bg-cornsilk-50', 'shadow', 'text-olive-leaf-700');
      tabLogin.classList.remove('text-black-forest-600', 'hover:text-black-forest-800');
      tabSignup.classList.remove('bg-cornsilk-50', 'shadow', 'text-olive-leaf-700');
      tabSignup.classList.add('text-black-forest-600', 'hover:text-black-forest-800');
    } else {
      loginContainer.classList.add('hidden');
      signupContainer.classList.remove('hidden');
      tabSignup.classList.add('bg-cornsilk-50', 'shadow', 'text-olive-leaf-700');
      tabSignup.classList.remove('text-black-forest-600', 'hover:text-black-forest-800');
      tabLogin.classList.remove('bg-cornsilk-50', 'shadow', 'text-olive-leaf-700');
      tabLogin.classList.add('text-black-forest-600', 'hover:text-black-forest-800');
    }
  }

  // Expose functions globally
  window.openAuthModal = openAuthModal;
  window.switchTab = switchTab;

  closeAuthBtn.addEventListener('click', closeAuthModal);
  authBackdrop.addEventListener('click', closeAuthModal);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !authModal.classList.contains('hidden')) {
      closeAuthModal();
    }
  });

  // Form submissions
  document.getElementById('login-form').addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Login functionality would be implemented here!');
  });

  document.getElementById('signup-form').addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Signup functionality would be implemented here!');
  });
</script>
