---

<div id="waitlist-modal" class="fixed inset-0 z-50 hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <!-- Backdrop -->
  <div class="fixed inset-0 bg-black-forest-900/60 dark:bg-black-forest-950/80 backdrop-blur-sm transition-opacity opacity-0" id="modal-backdrop"></div>
  
  <!-- Modal panel -->
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
      <div 
        id="modal-panel"
        class="relative transform overflow-hidden rounded-2xl bg-cornsilk-50 dark:bg-black-forest-900 text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-md opacity-0 scale-95"
      >
        <!-- Close button -->
        <button 
          type="button" 
          id="close-modal"
          class="absolute right-4 top-4 text-black-forest-400 dark:text-black-forest-500 hover:text-black-forest-600 dark:hover:text-black-forest-300 transition-colors"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <div class="px-6 py-8 sm:px-8">
          <div class="text-center">
            <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-olive-leaf-100 dark:bg-olive-leaf-900/30 mb-4">
              <svg class="h-7 w-7 text-olive-leaf-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold text-black-forest-900 dark:text-cornsilk-50 mb-2" id="modal-title">
              Join the Waitlist
            </h3>
            <p class="text-sm text-black-forest-600 dark:text-black-forest-400 mb-6">
              Be the first to know when we launch. Enter your email to secure your spot.
            </p>

            <form id="waitlist-form" class="space-y-4">
              <div>
                <label for="waitlist-name" class="sr-only">Full Name</label>
                <input
                  type="text"
                  id="waitlist-name"
                  name="name"
                  required
                  class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 dark:text-cornsilk-50 dark:bg-black-forest-800 shadow-sm ring-1 ring-inset ring-black-forest-200 dark:ring-black-forest-700 placeholder:text-black-forest-400 dark:placeholder:text-black-forest-500 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                  placeholder="Full Name"
                />
              </div>
              
              <div>
                <label for="waitlist-email" class="sr-only">Email address</label>
                <input
                  type="email"
                  id="waitlist-email"
                  name="email"
                  required
                  class="block w-full rounded-lg border-0 py-3 px-4 text-black-forest-900 dark:text-cornsilk-50 dark:bg-black-forest-800 shadow-sm ring-1 ring-inset ring-black-forest-200 dark:ring-black-forest-700 placeholder:text-black-forest-400 dark:placeholder:text-black-forest-500 focus:ring-2 focus:ring-inset focus:ring-olive-leaf-500 sm:text-sm"
                  placeholder="Enter your email"
                />
              </div>

              <button
                type="submit"
                class="w-full rounded-lg bg-olive-leaf-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-olive-leaf-500 focus-visible:outline focus-visible:outline-offset-2 focus-visible:outline-olive-leaf-600 transition-colors"
              >
                Join Waitlist
              </button>
            </form>

            <div id="success-message" class="hidden mt-4">
              <div class="rounded-lg bg-olive-leaf-50 dark:bg-olive-leaf-900/20 p-4">
                <div class="flex">
                  <div class="shrink-0">
                    <svg class="h-5 w-5 text-olive-leaf-600" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-olive-leaf-800 dark:text-olive-leaf-200">
                      You're on the list! We'll notify you when we launch.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Define the interface for the global window object
  declare global {
    interface Window {
      openWaitlistModal: () => void;
    }
  }

  const modal = document.getElementById('waitlist-modal');
  const backdrop = document.getElementById('modal-backdrop');
  const panel = document.getElementById('modal-panel');
  const closeBtn = document.getElementById('close-modal');
  const form = document.getElementById('waitlist-form') as HTMLFormElement | null;
  const successMessage = document.getElementById('success-message');
  const nameInput = document.getElementById('waitlist-name');

  function openModal() {
    if (!modal || !backdrop || !panel || !nameInput) return;

    modal.classList.remove('hidden');
    // Trigger reflow
    void modal.offsetWidth;
    backdrop.classList.remove('opacity-0');
    panel.classList.remove('opacity-0', 'scale-95');
    panel.classList.add('opacity-100', 'scale-100');
    nameInput.focus();
  }

  function closeModal() {
    if (!modal || !backdrop || !panel || !form || !successMessage) return;

    backdrop.classList.add('opacity-0');
    panel.classList.remove('opacity-100', 'scale-100');
    panel.classList.add('opacity-0', 'scale-95');
    setTimeout(() => {
      modal.classList.add('hidden');
      form.reset();
      successMessage.classList.add('hidden');
      form.classList.remove('hidden');
    }, 200);
  }

  // Expose openModal globally
  window.openWaitlistModal = openModal;

  if (closeBtn) {
    closeBtn.addEventListener('click', closeModal);
  }

  if (backdrop) {
    backdrop.addEventListener('click', closeModal);
  }

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
      closeModal();
    }
  });

  if (form && successMessage) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      // Simulate form submission
      form.classList.add('hidden');
      successMessage.classList.remove('hidden');
    });
  }
</script>
