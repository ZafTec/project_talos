---
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Welcome to Our Platform', 
  description = 'Join our exclusive platform and be part of something special.' 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-cornsilk-50 text-black-forest-900 min-h-screen">
    <slot />
  </body>
</html>
